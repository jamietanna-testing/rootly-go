{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "addLabels": [
    "dependencies"
  ],
  "separateMinorPatch": true,
  "packageRules": [
    {
      "description": "Require human review for `toolchain` directive and Mise updates",
      "matchDepNames": [
        "go"
      ],
      "dependencyDashboardApproval": true,
      "groupName": "go-toolchain"
    },
    {
      "description": "Require human review for `go` directive updates",
      "matchPackageNames": [
        "go"
      ],
      "matchDepTypes": [
        "golang"
      ],
      "dependencyDashboardApproval": true,
      "groupName": "go-directive"
    },
    {
      "description": "Run `go generate` after updating the OpenAPI spec",
      "matchManagers": [
        "vendir"
      ],
      "matchUpdateTypes": [
        "lockFileMaintenance"
      ],
      "postUpgradeTasks": {
        "commands": [
          "go generate ./..."
        ],
        "fileFilters": [
          "**/*.gen.go"
        ],
        "executionMode": "update"
      }
    }
  ],
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.*/config.yaml$/"
      ],
      "matchStrings": [
        "# yaml-language-server: \\$schema=https://raw.githubusercontent.com/oapi-codegen/oapi-codegen/(?<currentValue>[^/]+)/configuration-schema.json"
      ],
      "depNameTemplate": "github.com/oapi-codegen/oapi-codegen/v2",
      "datasourceTemplate": "go"
    }
  ],
  "vendir": {
    "lockFileMaintenance": {
      "enabled": true,
      "branchTopic": "vendir-openapi-sync",
      "commitMessageAction": "update vendored OpenAPI spec",
      "schedule": [
        "at any time"
      ],
      "prBodyDefinitions": {
        "Update": "",
        "Change": "Updated OpenAPI spec"
      }
    }
  }
}
